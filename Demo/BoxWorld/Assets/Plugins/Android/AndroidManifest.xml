<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
	android:versionName="1.0" 
	android:versionCode="1" 
	android:installLocation="preferExternal">
  <supports-screens android:smallScreens="true" android:normalScreens="true" android:largeScreens="true" android:xlargeScreens="true" android:anyDensity="true" />

  <application android:theme="@style/SVRUnityTheme" 
  			android:icon="@drawable/app_icon" 
  			android:debuggable="false" 
  			android:isGame="true" 
  			android:label="@string/app_name"
  			android:banner="@drawable/app_banner">
    <activity android:name="com.coocaa.vr.sdk.CCVrUiActivity" 
    		android:screenOrientation="landscape" 
    		android:launchMode="singleTask" 
    		android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
        <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
        <category android:name="com.qti.intent.category.SNAPDRAGON_VR"/>
      </intent-filter>
      <meta-data android:name="unityplayer.UnityActivity" android:value="true" />
    </activity>

    <!-- 用于判断是否使用了酷开VRSDK -->
        <meta-data android:value="true" android:name="COOCAA_VR_APP"></meta-data>
  </application>
  <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="23" />
  <uses-feature android:glEsVersion="0x00020000" />
  <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
  <uses-feature android:name="android.hardware.touchscreen.multitouch" android:required="false" />
  <uses-feature android:name="android.hardware.touchscreen.multitouch.distinct" android:required="false" />



</manifest>
